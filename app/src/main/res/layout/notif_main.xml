<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:weightSum="1"

    android:background="#234455">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:id="@+id/child1"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/checkBox1"
            android:longClickable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Your Daily Notification"
            android:inputType="time"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:ems="10"
            android:id="@+id/textv" />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingLeft="10dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/checkBox2"
                android:longClickable="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/othertext"
                android:text="Set Time for SMS Notification"
                android:editable="false"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                />


        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contactbutton"
            android:id="@+id/addothers" />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noti_others"
            android:clickable="true"
            android:divider="#FFCC00"
            android:dividerHeight="6px"
            android:layout_margin="20dp"
            />

    </LinearLayout>

</LinearLayout>