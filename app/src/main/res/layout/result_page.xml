<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:weightSum="1"
    android:background="#234455">
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"

        android:fontFamily="sans-serif-light"
        android:id="@+id/zipsearch"
        android:inputType="number"
        android:hint="@string/hint1"
        android:textColorHint="#fefefe"
        android:gravity="center"
        android:textColor="#fefefe"
        android:layout_gravity="center"
        android:imeOptions="actionSend"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@drawable/rounded_edittext"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="The current AQI for"
        android:textSize="18dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zipresult"
        android:textColor="@android:color/white"
        android:paddingTop="5dp"
        android:fontFamily="sans-serif-light"
        android:text="24109"
        android:textSize="30dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:id="@+id/aqicircle"
        android:layout_marginTop="0dp"
        android:text="25"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="110dp"
        android:padding="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/resultrating"
    android:textColor="@android:color/white"
    android:paddingTop="0dp"
    android:fontFamily="sans-serif-light"
    android:text="Good"
    android:textSize="30dp"
    android:gravity="center"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultratingtext"
        android:textColor="@android:color/white"
        android:paddingTop="5dp"
        android:fontFamily="sans-serif-light"
        android:text="Indicates"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:id="@+id/resulttext" />



</LinearLayout>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:text=""
        android:background="@drawable/notifbutton"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>